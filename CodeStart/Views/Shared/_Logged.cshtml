@using Microsoft.AspNetCore.Http
@{
    string username = Context.Session.GetString("USERNAME");
    int id = Convert.ToInt32(Context.Session.GetInt32("ID"));

    if (!(id != null || username != null))
    {
        username = "undefined";
        id = 0;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A forum for programmers">
    <meta name="author" content="Lauro Oliveira">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="~/lib/style.css">-->
    <environment include="Development">
        <link rel="stylesheet" href="~/bil/style.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    </environment>

    <environment include="Development">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="~/bil/script.js" type="text/javascript"></script>
    </environment>

    @RenderSection("Scripts", required: false)
    <link rel="icon" href="~/img/LogoWhite.png">
    <title>@ViewData["Title"] - Code Start</title>

</head>
<body>
    <header class="container-fluid">
        <nav class="navbar">
            <ul class="list-navbar">
                <li>
                    <img src="~/img/LogoWhite.png" id="header-logo">
                </li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link actived">Home</a></li>
                <li><a asp-area="" asp-controller="User" asp-action="Question" class="menu-link">Questions</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">Tags</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">Rank</a></li>
            </ul>
            <ul class="register-navbar float-left">
                <li><a asp-area="" asp-controller="User" asp-action="Exit" class="menu-link">Exit</a></li>
                <li><a asp-area="" asp-controller="User" asp-action="Profile" class="menu-link">@username</a></li>
            </ul>
        </nav>
    </header>
    <section id="section-doubt" class="mt-5 mb-5">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>


    <!-- <footer id="footer"></footer> -->
</body>
</html>
