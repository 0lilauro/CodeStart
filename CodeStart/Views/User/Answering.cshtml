@model CodeStart.Models.Answer
@{
    ViewData["Title"] = "Answering";
    Layout = "~/Views/Shared/_Logged.cshtml";
}
<style>
</style>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="middle-content">
            <div class="to-middle mr-2 ml-2">
                <center>
                    <h1 class="pb-1">Answering</h1>
                    <hr class="gray-bar">
                </center>

                <div class="mt-2 question-area">
                    <div class="question-content p-4 mb-3">
                        <div class="answers-form">
                            @using (Html.BeginForm()){

                            @Html.TextAreaFor(model => model.Description, new { placeholder = "Type here your answer...", @class = "add-answer" });
                                <div align="right">
                                    <button type="submit" class="btn form-answer-button">Enviar</button>
                                </div>
                            }
                        </div>

                    </div>



                </div>

            </div>
        </div>
    </div>
    <div class="col-md-2">
    </div>
</div>
